{% extends 'base.html.twig' %}

{% block title %}Clean Twig{% endblock %}

{% block body %}
	<header class="masthead" style="background-image: url('img/home-bg.jpg')">
		<div class="overlay"></div>
		<div class="container">
			<div class="row">
				<div class="col-lg-8 col-md-10 mx-auto">
					<div class="site-heading">
						<h1>Clean Twig</h1>
						<span class="subheading">Un TP Symfony</span>
					</div>
				</div>
			</div>
		</div>
	</header>

	<div class="container">
		<div class="row">
			<div class="col-lg-8 col-md-10 mx-auto">
				{% for article in articles %}
					<div class="post-preview">
						<a href="{{ url('article', {"id": article.id}) }}">
							<h2 class="post-title">
								{{ article.title }}
							</h2>
							<h3 class="post-subtitle">
								{{ article.subtitle }}
							</h3>
						</a>
						<p class="post-meta">
							Posted by {{ article.author }}<br/>
							At {{ article.createdAt }}
						</p>
						<div style="width: 100%; height: 175px; background: center / 100% url({{ article.image }});"></div>
					</div>
					<hr>
				{% endfor %}
				<!-- Pager -->
				<div class="clearfix">
					{% if prev %}
						<a class="btn btn-primary float-left" href="{{ url('home', {"page": page - 1 }) }}">&larr; Newer Posts</a>
					{% endif %}
					{% if next %}
						<a class="btn btn-primary float-right" href="{{ url('home', {"page": page + 1 }) }}">Older Posts &rarr;</a>
					{% endif %}
				</div>
			</div>
		</div>
	</div>
{% endblock %}